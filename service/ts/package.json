{
  "name": "openrating-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "NODE_ENV=test AUTH_DISABLE=1 node --test --loader tsx ./test/routes/ratings.test.ts",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts",
    "grants": "tsx scripts/grants.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.5",
    "pg": "^8.11.5",
    "express-oauth2-jwt-bearer": "^1.7.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/yargs": "^17.0.32",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "drizzle-kit": "^0.30.2",
    "@types/supertest": "^2.0.16",
    "supertest": "^7.0.0"
  }
}
